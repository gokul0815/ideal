<div class="products">
  <h1>SHOP</h1>
  <div class="row">
    <% @products.each do |product| %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4">
          <div class="product">
            <div class="img"><%= link_to image_tag(product.img, width: '550', class:  "img-responsive center-block"), product %></div>
            <h2><%= link_to product.title, product %></h2>
            <small><strong>Price: <%= product.price %>$</strong></small>
          </div>
        </div>
    <% end %>
  </div>
</div>
